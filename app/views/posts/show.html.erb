Title: <%= @post.title %>
Content: <%= @post.content %>
Catgeories: <% @post.categories.each do |category| %>
  <%= category.name %>
<% end %>
<% users = [] %>
Comments: <% @post.comments.each do |comment| %>
  <%= comment.content %>
  <% users << comment.user %>
<% end %>
Commenters: <% users.uniq! %>
  <% users.each do |user| %>
    <%= link_to user.username, user_path(user) %>
  <% end %>

<%= form_for @post do |f| %>
  <%= fields_for :comments do |comment| %>
    <%= comment.collection_select :user, User.all, :id, :username, include_blank: "" %>
    <%= comment.text_area :content %>
  <% end %>
  <%= f.submit %>
<% end %>
